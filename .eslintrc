# http://eslint.org/docs/user-guide/configuring
---
extends: eslint-config-airbnb/base

env:
  browser: true
  node: true
  mocha: true

globals:
  __DEVTOOLS__: true

rules:

  # DISABLED
  new-cap: 0
  no-console: 0
  no-constant-condition: 0
  no-unused-expressions: 0
  no-use-before-define: 0
  padded-blocks: 0
